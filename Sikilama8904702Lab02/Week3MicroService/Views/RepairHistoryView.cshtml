@model List<Week3MicroService.Models.RepairHistoryViewModel>
<h2>Vehicle Repair History</h2>
<form method="post">
    <div class="form-group">
        <label>Vehicle ID</label>
        <input type="number" name="vehicleId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">
        View History
    </button>
</form>
<hr />
@if (!Model.Any())
{
    <p>No repair history found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Performed By</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var repair in Model)
        {
            <tr>
                <td>@repair.RepairDate.ToShortDateString()</td>
                <td>@repair.Description</td>
                <td>@repair.Cost.ToString("C")</td>
                <td>@repair.PerformedBy</td>
            </tr>
        }
        </tbody>
    </table>
}